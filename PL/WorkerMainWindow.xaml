<Window x:Class="PL.WorkerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Icon="\Images\IsraelFlag.jpg" 
          Background="#7D87B0"
        Title="WorkerMainWindow" Height="450" Width="800"
         DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid>
        <Button Content="Chose a Task" Visibility="{Binding IsThirdStage , Mode=OneWay, Converter={StaticResource BoolToVisibilityConverterKey}}"   FontSize="15" FontFamily="Arial Black" Margin="322,378,351,10" Click="ButtonChoseTask_Click" Background="{x:Null}" BorderBrush="White" BorderThickness="1.5" Foreground="White" ></Button>

        <Label Content="{Binding Hello, Mode=OneWay}" Margin="227,27,169,337" Foreground="Black" FontSize="20" FontFamily="Arial Black"></Label>
        <ListView d:ItemsSource="{Binding MyTask, Mode=OneWayToSource}" Margin="26,137,312,137" MouseDoubleClick="Update_click" >
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
