<Window x:Class="PL.User.Two_Step_Verification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.User"
        mc:Ignorable="d"
        Title="Two_Step_Verification" Height="200" Width="300"
        DataContext="{Binding CodeFromEmail, RelativeSource={RelativeSource Self}, Mode=TwoWay}">
    <Grid Margin="314,145,0,0">
        <Label Content="enter verification code:" HorizontalAlignment="Left" Margin="-277,-90,0,0" VerticalAlignment="Top" Height="27" Width="135"/>
        <TextBox MaxLength="4" HorizontalAlignment="Left" Margin="-121,-90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="67" Height="27"
                 Text="{Binding  ,Mode=OneWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true }"/>
        <Button Content="enter" HorizontalAlignment="Left" Margin="-75,0,0,13" VerticalAlignment="Bottom" Height="22" Width="38" Click="CheckAndOpenUserWindow_click"/>
        <PasswordBox MaxLength="4" HorizontalAlignment="Left" Margin="-268,-58,0,0" VerticalAlignment="Top" Width="86"
                      ="{Binding CodeFromEmail ,Mode=OneWay,Converter NotifyOnValidationError=true,  ValidatesOnExceptions=true }"/>


    </Grid>
</Window>
